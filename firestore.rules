rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    function isAdmin() {
      // Check if user is the default admin or has a document in admins collection
      return isSignedIn() &&
        (request.auth.token.email == 'admin@kisanmitra.com' ||
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
    }

    // Users collection - farmers can read/write their own data, admins can manage all users
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isOwner(userId) || isAdmin(); // Owner or Admin can update/delete
    }

    // Stores collection - anyone can read verified stores for search functionality
    match /stores/{storeId} {
      allow read: if true; // Public read to allow farmers to search for stores
      allow create: if isSignedIn();
      allow update: if isOwner(storeId) || isAdmin(); // Owner or Admin can update
      allow delete: if isOwner(storeId) || isAdmin(); // Owner or Admin can delete
    }

    // Admins collection - read allowed for authenticated users
    match /admins/{adminId} {
      allow read: if isSignedIn();
      allow write: if false; // Admins are created manually, not through the app
    }

    // Fertilizers collection - public read for search functionality
    match /fertilizers/{fertilizerId} {
      allow read: if true; // Public read to allow farmers to search fertilizers
      allow write: if isSignedIn(); // Authenticated users can manage fertilizers
    }

    // Store fertilizers collection - public read for search
    match /store_fertilizers/{id} {
      allow read: if true; // Public read to show fertilizer availability at stores
      allow create, update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // Safety guidelines collection - public read for advisory screen
    match /safety_guidelines/{guidelineId} {
      allow read: if true; // Public read to show safety guidelines
      allow write: if isSignedIn(); // Authenticated users can manage guidelines
    }

    // Admin activity logs - only admins can read and write
    match /adminActivityLogs/{logId} {
      allow read: if isAdmin(); // Only admins can read activity logs
      allow create: if isAdmin(); // Only admins can create logs
      allow update, delete: if false; // Logs should never be modified or deleted
    }

    // App configuration - only admins can read and write
    match /appConfig/{configId} {
      allow read: if isAdmin(); // Only admins can read app config
      allow write: if isAdmin(); // Only admins can update app config
    }

    // Admin users collection - only admins can read and write
    match /adminUsers/{adminUserId} {
      allow read: if isAdmin(); // Only admins can read admin users
      allow write: if isAdmin(); // Only admins can manage admin users
    }
  }
}
